{
  "name": "Apple China Design System",
  "version": "1.0.1",
  "description": "Design tokens for Apple China website - based on Apple Human Interface Guidelines",
  "productType": "Technology",
  "industry": "Consumer Electronics",
  "styleTags": ["minimal", "clean", "premium", "professional", "sleek", "modern", "sophisticated"],
  "colorTags": ["tech-blue", "monochrome", "premium", "professional", "sophisticated"],
  "fontTags": ["sans-serif", "geometric", "clean", "modern", "premium"],
  "colors": {
    "primary": {
      "blue": {
        "default": "#007AFF",
        "hover": "#338BFF",
        "active": "#0062CC"
      }
    },
    "semantic": {
      "success": "#34C759",
      "warning": "#FF9500",
      "danger": "#FF3B30"
    },
    "neutral": {
      "white": "#ffffff",
      "black": "#1d1d1f",
      "gray-1": "#f5f5f7",
      "gray-2": "#e8e8ed",
      "gray-3": "#d2d2d7",
      "gray-4": "#86868b",
      "gray-5": "#6e6e73"
    }
  },
  "typography": {
    "fontFamily": {
      "chinese": ["SF Pro SC", "PingFang SC", "苹方-简", "-apple-system", "Hiragino Sans GB", "Microsoft YaHei", "sans-serif"],
      "english": ["SF Pro", "-apple-system", "BlinkMacSystemFont", "Segoe UI", "Roboto", "Helvetica", "Arial", "sans-serif"],
      "mono": ["SF Mono", "Menlo", "Monaco", "Consolas", "monospace"]
    },
    "fontSize": {
      "h1": {"value": 48, "unit": "px", "weight": 600},
      "h2": {"value": 40, "unit": "px", "weight": 600},
      "h3": {"value": 32, "unit": "px", "weight": 600},
      "h4": {"value": 24, "unit": "px", "weight": 600},
      "body": {"value": 17, "unit": "px", "weight": 400},
      "bodySmall": {"value": 14, "unit": "px", "weight": 400},
      "caption": {"value": 12, "unit": "px", "weight": 400}
    },
    "lineHeight": {
      "tight": 1.1,
      "normal": 1.47,
      "relaxed": 1.6
    }
  },
  "spacing": {
    "unit": 8,
    "scale": {
      "xxs": 4,
      "xs": 8,
      "sm": 12,
      "md": 16,
      "lg": 24,
      "xl": 32,
      "xxl": 48,
      "xxxl": 64,
      "xxxxl": 96,
      "jumbo": 128
    }
  },
  "layout": {
    "maxWidth": {
      "content": 1080,
      "page": 1440
    },
    "gridColumns": 12,
    "gridGutter": 24
  },
  "breakpoints": {
    "mobile": 734,
    "tablet": 1068,
    "desktop": 1440,
    "wide": 1920
  },
  "components": {
    "button": {
      "height": 44,
      "paddingX": 22,
      "paddingY": 12,
      "borderRadius": 980,
      "fontSize": 17
    },
    "navigation": {
      "height": 44,
      "background": "rgba(0, 0, 0, 0.8)",
      "backdropBlur": 20
    },
    "card": {
      "borderRadius": 18,
      "padding": 24
    }
  },
  "effects": {
    "shadow": {
      "small": "0 2px 8px rgba(0, 0, 0, 0.04)",
      "medium": "0 8px 16px rgba(0, 0, 0, 0.08)",
      "large": "0 16px 48px rgba(0, 0, 0, 0.12)",
      "extraLarge": "0 32px 64px rgba(0, 0, 0, 0.16)"
    },
    "transition": {
      "fast": 150,
      "normal": 250,
      "slow": 350
    },
    "blur": {
      "small": 4,
      "medium": 8,
      "large": 16,
      "navigation": 20
    }
  },
  "accessibility": {
    "contrast": {
      "normalText": 4.5,
      "largeText": 3,
      "uiComponents": 3
    },
    "touchTarget": {
      "minimum": 44
    }
  },
  "validation": {
    "noEmojisAsIcons": true,
    "cursorPointer": true,
    "hoverTransitions": true,
    "reducedMotionSupport": true,
    "responsiveBreakpoints": [734, 1068, 1440, 1920]
  }
}